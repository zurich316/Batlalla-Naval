
<html>
<head>
	<script src="semantic/dist/semantic.min.js"></script>
	<script src="semantic/dist/components/dropdown.min.js"></script>
	<script src="semantic/examples/assets/library/jquery.min.js"></script>
	<script src="semantic/dist/semantic.min.js"></script>
	<link rel="stylesheet" href="Semantic/style.css">
	<link rel="stylesheet" type="text/css" href="semantic/dist/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css" media="screen" title="no title" charset="utf-8">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.js"></script>
	<title>Batalla Naval</title>

<head>
<body>

	
	<div class="ui basic padded segment">
		<h1 class="ui blue centered  header">Batalla Naval</h1>
	</div>

	<% indexed_rows = ["A","B","C","D","E","F","G","H","I","J"] %>
	<% nroletra = 0 %>
	<div class="ui grid">	  

  		<div class="eight wide column">
  			<h3 class="ui teal centered header" style="margin-right:20%;">Tus barcos</h1>
  			<table class="ui right floated celled definition blue table" style="width:80%; margin-left:20px; table-layout: fixed;">
			 	<thead>
			 		<tr>
			 			<th></th>
					  	<% [*1..10].each do |e| %>
					    <th class=" blue center aligned "><B><%= e %></B></th>
					    <% end %>
					</tr>
				</thead>
				<tbody>	
				<% @tb.each do |elem| %>
				    <tr>
				    	<td class="center aligned"><%= indexed_rows[nroletra] %></td> 	  
				    	<% nroletra += 1 %>
				  		<% elem.each do |e| %>
				    	<td class="center aligned"><%= e == 'B' ? "<i class='ship icon'></i>" : "0" %></td>
				    	<% end %>    
				    </tr>
				<% end %>
				<% nroletra = 0 %>
				<tbody>
			</table>

	  	</div>
  		<div class="eight wide column">
  			<h3 class="ui red centered header" style="margin-right:20%;">Posiciones atacadas</h1>
  			<table class="ui right floated celled definition red table" style="width:80%; margin-left:20px; table-layout: fixed;">
			 	<thead>
			 		<tr>
			 			<th></th>
					  	<% [*1..10].each do |e| %>
					    <th class=" blue center aligned "><B><%= e %></B></th>
					    <% end %>
					</tr>
				</thead>
				<tbody>
				<% @tb.each do |elem| %>
				    <tr>  		  
				    	<td class="center aligned"><%= indexed_rows[nroletra] %></td> 	  
				    	<% nroletra += 1 %>
				  		<% elem.each do |e| %>
				    	<td class="center aligned">0</td>
				    	<% end %>    
				    </tr>
				<% end %>
				<% nroletra = 0 %>
				<tbody>
			</table>
  		</div>
	</div>
</br>		

	<form class="ui form" method='post' action="/table">
		<div class="five fields">
			<div class="field" style="margin-left:20px;">
				<label>Fila: </label>
				<select name="row" >
				  <% [*'A'..'J'].each do |row| %>
				    <option value=<%= row %>><%= row %></option>
				  <% end %>
				</select>
			</div>
			<div class="field">
				<label>Columna: </label>
				<select name="colum" >
					  <% [*1..10].each do |column| %>
					    <option value=<%= column %>><%= column %></option>
					  <% end %>
				</select>
			</div>
		</div>
		<div class="ten fields">
			<div class="field" style="margin-left:210px;">
				<div class="ui radio checkbox">
			        <input type="radio" name="dir" value="v" checked>
			        <label>Vertical</label>
			    </div>
			</div>
			<div class="field">
				<div class="ui radio checkbox">
			        <input type="radio" name="dir" value="h" >
			        <label>Horizontal</label>
			    </div>
			</div>
		</div>
		
    	
		<input class="ui yellow button" type="submit" value ="Generar" style="margin-left:17%;">
	</form>

<script>
	 var $select = $(".1-10");
	    for (i=1;i<=100;i++){
	        $select.append($('<option></option>').val(i).html(i))
	    }
</script>

</body>
</html>